[% title = 'Sign In' %]
[% INCLUDE TIDES/header.tmpl login=1 %]
<form method="post" action="[% url %]">
    <table class="login">
        <tr>
            <td><label for="authen_loginfield" id="authen_loginfield_label">User Name</label></td>
            <td><input id="authen_loginfield" tabindex="1" type="text" name="authen_username" size="20" value="" /></td>
        </tr>
        <tr>
            <td><label for="authen_passwordfield" id="authen_passwordfield_label">Password</label></td>
            <td><input id="authen_passwordfield" tabindex="2" type="password" name="authen_password" size="20" /></td>
        </tr>
        <tr>
            <td colspan="2" align="center"><input id="authen_loginbutton" tabindex="4" type="submit" name="authen_loginbutton" value="Sign In" class="button" /></td>
        </tr>
    </table>
</form>
[%+ INCLUDE TIDES/footer.tmpl %]
